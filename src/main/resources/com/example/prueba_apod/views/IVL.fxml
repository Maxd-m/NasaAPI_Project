<VBox fx:id="ap" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.prueba_apod.controllers.ControllerIVL" alignment="TOP_CENTER"
      style="-fx-background-image: url('fondoe.jpg'); -fx-background-size: cover">
  <ToolBar style="-fx-background-color: black">
    <Button fx:id="btnBack" text="Back" onAction="#onBackButtonClick" styleClass="btn,btn-default, btn-xs">
      <tooltip><Tooltip text="Go back to menu"/></tooltip>
    </Button>
  </ToolBar>
  <Panel fx:id="mainPanel" style="-fx-background-color: black" >
    <heading>
        <Label style="-fx-text-fill: white" text="NASA Image and Video Library " styleClass="h3"/>
    </heading>

    <body>
      <VBox fx:id="contentVbox" spacing="20.0" >

        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>

        <HBox alignment="CENTER">
          <TextField fx:id="input_search" style="-fx-font-size: 25"></TextField>
          <Button fx:id="searchBtn" text="Search" style="-fx-background-color: black; -fx-font-size: 20" prefWidth="100" prefHeight="45" styleClass="btn,btn-primary" onAction="#onSearchButtonClick"/>
        </HBox>
        <GridPane style="-fx-background-color: black" fx:id="gp" alignment="CENTER" hgap="10" vgap="10">
        </GridPane>

      </VBox>
    </body>

  </Panel>


</VBox>
